<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    -

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:text="Be still and pay your attention to your telling beads"
            android:textColor="#404040"
            android:textSize="25dp"
            android:textStyle="bold"
            android:visibility="visible" />


        -

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">

            <TextView
                android:id="@+id/numb"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:text="Number of Click"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/count"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:text="Number of Round"
                android:textSize="20dp" />

        </LinearLayout>

        -

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">

            <TextView
                android:id="@+id/tvclickcount"
                style="@style/Widget.AppCompat.ListPopupWindow"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="5"
                android:gravity="right"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="0"
                android:textAlignment="center"
                android:textSize="40dp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/tvroundcount"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="5"
                android:gravity="right"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="40dp"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <Button
            android:id="@+id/btClick"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/circle_button"
            android:text="Click"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btReset"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/circle_button"
            android:text="Reset"
            android:textSize="20dp" />

    </LinearLayout>

</ScrollView>